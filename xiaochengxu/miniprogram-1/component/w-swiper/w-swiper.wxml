<!--component/w-swiper/w-swiper.wxml-->

<swiper class="swiper"
        circular
        autoplay
        indicator-dots
        duration="300"
        indicator-active-color="#ff5777"
>
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item class="swiper-item">
      <image src="{{item.url}}" 
              mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>